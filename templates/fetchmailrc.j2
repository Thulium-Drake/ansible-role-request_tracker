# {{ ansible_managed }}
set pidfile /tmp/.fetchmail.pid
set logfile /var/log/rt5_fetchmail.log
poll {{ rt_fetchmail_host }}    proto auto:
 username {{ rt_fetchmail_user }} password {{ rt_fetchmail_password }} mda "/opt/rt5/bin/rt-mailgate --url https://{{ rt_host_name }} --queue {{ rt_fetchmail_queue }} --action correspond {% if not rt_verify_ssl %}--no-verify-ssl{% endif %}"
